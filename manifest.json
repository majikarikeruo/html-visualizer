{
  "manifest_version": 3,
  "name": "HTML Visualizer",
  "version": "1.0",
  "description": "Visualize HTML tags on web pages based on their hierarchy.",
  "permissions": ["activeTab", "<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon.jpg"
  }
}
